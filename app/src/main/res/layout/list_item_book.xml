<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MaterialCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        style="@style/LinearLayoutCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            style="@style/ImageViewStyle"
            android:id="@+id/iv_image_book"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_book"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/BookShortDescriptionTextStyle"
                android:id="@+id/tv_name_book"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/BookShortDescriptionTextStyle"
                android:id="@+id/tv_author_book" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/BookShortDescriptionTextStyle"
                android:id="@+id/tv_genre_book" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/BookShortDescriptionTextStyle"
                android:id="@+id/tv_language_book" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>